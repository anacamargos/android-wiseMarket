<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dados Cadastrais"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold"
            android:padding="8dp"
            android:gravity="center"
            />

        <EditText
            android:id="@+id/signup_nome"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text_style"
            android:layout_width="249dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Nome" />

        <EditText
            android:id="@+id/signup_email"
            android:background="@drawable/edit_text_style"
            android:layout_marginTop="8dp"
            android:layout_width="249dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Email" />

        <EditText
            android:id="@+id/signup_telefone"
            android:background="@drawable/edit_text_style"
            android:layout_marginTop="8dp"
            android:layout_width="249dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Telefone" />

        <EditText
            android:id="@+id/signup_cpf"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text_style"
            android:layout_width="249dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="CPF" />

        <EditText
            android:id="@+id/signup_cep"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text_style"
            android:layout_width="249dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="CEP" />

        <EditText
            android:id="@+id/signup_password"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text_style"
            android:layout_width="249dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Senha"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/signup_numcredito"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text_style"
            android:layout_width="249dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Numero Cartão de Crédito" />

        <EditText
            android:id="@+id/signup_datexpira"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text_style"
            android:layout_width="249dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Data Expiração" />

        <EditText
            android:id="@+id/signup_cvv"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text_style"
            android:layout_width="249dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="CVV" />

        <Button
            android:layout_marginTop="8dp"
            android:textColor="#ffffff"
            android:id="@+id/signup_button"
            android:background="@drawable/button_style"
            android:layout_width="130dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Sign up" />
    </LinearLayout>



</ScrollView>